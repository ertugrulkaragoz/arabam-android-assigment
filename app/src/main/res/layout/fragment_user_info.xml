<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.detail.UserInfoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/user_fragment_id_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="8dp"
                android:text="@string/id"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/user_fragment_id_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="8dp"
                android:textColor="@color/purple_500"
                android:textSize="13sp"
                tool:text="344.123 TL" />
        </RelativeLayout>


        <View
            android:id="@+id/user_fragment_id_divider"
            android:layout_width="match_parent"
            android:layout_height="0.05dp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorDivider" />

        <RelativeLayout
            android:id="@+id/user_fragment_name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="8dp"
                android:text="@string/user_name_surname"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/user_fragment_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="8dp"
                android:textSize="13sp" />
        </RelativeLayout>


        <View
            android:id="@+id/user_fragment_name_divider"
            android:layout_width="match_parent"
            android:layout_height="0.05dp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorDivider" />

        <RelativeLayout
            android:id="@+id/user_fragment_phone_number_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="8dp"
                android:text="@string/phone_number"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/user_fragment_phone_number_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="8dp"
                android:textSize="13sp" />
        </RelativeLayout>


        <View
            android:id="@+id/user_fragment_phone_number_divider"
            android:layout_width="match_parent"
            android:layout_height="0.05dp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorDivider" />


    </LinearLayout>

</RelativeLayout>